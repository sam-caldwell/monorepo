---
name: workflow-02-test

on:
  workflow_run:
    workflows:
      - foo
      - "workflow-00-setup"
      - "workflow-01-lint"
    types:
      - completed
  push:
    branches:
      - foo
#      - main
    tags:
      - foo
#      - v*
  pull_request:
    branches:
      - foo
#      - main

jobs:
  noop:
    name: noop
    runs-on: ubuntu-latest
    steps:
      - name: useless-task
        run: echo "good enough to be government work...or AT&T"
  test:
    name: Run Tests
    needs: lint.outputs.lint-successful
    runs-on: ubuntu-latest
    outputs:
      test-successful: ${{ steps.test-successful.outputs.success }}
    env:
      LINT_ENABLED: ${{ needs.config.outputs.lint-enabled }}   # Set this to 'true' to enable linting
      TEST_ENABLED: ${{ needs.config.outputs.test-enabled }}   # Set this to 'true' to enable testing
      BUILD_ENABLED: ${{ needs.config.outputs.build-enabled }}  # Set this to 'true' to enable building
    strategy:
      fail-fast: true
      matrix:
        go-version:
          - '1.20'
          - '1.19'
          - '1.18'
        go-arch: [ 'amd64', 'arm64' ]
        go-opsys: [ 'linux', 'darwin', 'windows' ]

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Go
        uses: actions/setup-go@v3
        with:
          go-version: ${{ matrix.go-version }}

      - name: Run tests ${{ matrix.go-version }}
        id: test-successful
        run: |
          if [ "${{ needs.lint.outputs.lint-enabled }}" = "true" ]; then
            make test/simple
          else
            echo "Tests disabled"
          fi
