# Detect text files automatically
* text=auto
# Force LF line ending on these files
*.sh eol=lf
ks.cfg eol=lf
preseed.cfg eol=lf
# Force CRLF line ending on these files
*.bat eol=crlf
Autounattend.xml eol=crlf
# Force binary on these files
*.cer binary
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.iso filter=lfs diff=lfs merge=lfs -text
*.tar.bz2 filter=lfs diff=lfs merge=lfs -text
*.tar.xz filter=lfs diff=lfs merge=lfs -text
*.tar.bzip2 filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.bz filter=lfs diff=lfs merge=lfs -text
*.bz2 filter=lfs diff=lfs merge=lfs -text
*.bzip2 filter=lfs diff=lfs merge=lfs -text
